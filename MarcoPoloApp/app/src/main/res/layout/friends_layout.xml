<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/friendslist_profile_image"
        android:layout_width="127dp"
        android:layout_height="106dp"
        android:maxWidth="80dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        tools:maxHeight="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/friendslist_user_name"
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/friendslist_profile_image"
        android:text="TextView"
        android:textSize="20sp"
        tools:text="David Rodriguez"
        app:layout_constraintLeft_toRightOf="@+id/friendslist_profile_image"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/friendslist_last_login"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/friendslist_profile_image"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/friendslist_profile_image"
        android:text="Last Marco: 10/09"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/friendslist_profile_image"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toBottomOf="@+id/friendslist_user_name" />

    <Button
        android:id="@+id/button2"
        android:layout_width="105dp"
        android:layout_height="106dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Marco!"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>