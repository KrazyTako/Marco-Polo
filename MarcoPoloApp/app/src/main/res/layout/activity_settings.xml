<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/sync_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sync Contacts"
            android:onClick="onClickSyncContacts"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="invisible" />

        <ScrollView
            android:id="@+id/my_marco_scroll_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sync_button">
            <TextView
                android:id="@+id/my_marco_text_view"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:visibility="gone"
                android:layout_centerInParent="true"/>
        </ScrollView>

        <Button
            android:id="@+id/delete_marco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/my_marco_scroll_box"
            android:text="Delete My Marco"
            android:onClick="onClickDeleteMarco"
            android:enabled="false"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:onClick="onClickSignOut"
            android:text="Sign out" />
    </RelativeLayout>

</RelativeLayout>